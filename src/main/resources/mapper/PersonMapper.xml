<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dao.PersonDao">
    <resultMap type="Person" id="personResultMap" >
        <id property="name" column="name"/>
        <result property="dorm_number" column="dorm_number"/>
        <result property="age" column="age"/>
        <result property="sex" column="sex"/>
    </resultMap>
    <insert id="addperson" parameterType="Person">
        INSERT INTO person(name,dorm_number,age,sex) VALUE (#{name},#{dorm_number}, #{age}, #{sex})
    </insert>

    <select id="queryAll" resultMap="personResultMap">
        SELECT name,dorm_number,age,sex
        FROM person
    </select>


</mapper>
